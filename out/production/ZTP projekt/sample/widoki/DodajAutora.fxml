<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.kontrolery.DodajAutoraKontroler">
   <children>
      <HBox alignment="TOP_CENTER" spacing="20.0">
         <children>
            <Label text="Imie" />
            <TextField fx:id="ImieAutoraTextField" />
            <Label text="Nazwisko" />
            <TextField fx:id="NazwiskoAutoraTextField" />
            <Button fx:id="dodajAutoraButton" mnemonicParsing="false" onAction="#dodajAutora" text="Dodaj" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <TableView fx:id="autorTableView" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="imieKolumna" prefWidth="264.0" text="Imie" />
          <TableColumn fx:id="nazwiskoKolumna" prefWidth="252.0" text="Nazwisko" />
        </columns>
      </TableView>
   </children>
</VBox>
